  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">post title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-input" type="text" id="description" name="description" />
      </div>
      <div class="form-group">
        <label for="post-image">Image link</label>
        <textarea class="form-input" id="post-image" name="post-image"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="submit-button">Create</button>
      </div>
    </form>
  </div>


